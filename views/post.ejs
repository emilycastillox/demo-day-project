<!doctype html>
<html>
<head>
    <title>LianxiLib | Character </title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <a href="/profile">Profile</a>
        <a href="/feed">Feed</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="msgcenter">
        <h2 id="learned">Your Learned Character Library</h2>
        <section>
        <ul class="characters">
        <% for(var i=0; i<characters.length; i++) {%>
          <li class="character <%= characters[i].favorited ? 'purple' : '' %>">
            <span><%= characters[i].character %></span>
            <span><%= characters[i].definition %></span>
            <span><%= characters[i].pinyin %></span>
            <audio controls src="<%= characters[i].audio %>"></audio>
            <span><%= characters[i].thumbUp %></span>
            <span><i class="fa-solid fa-check" aria-hidden="true"></i></span>
            <span><i class="fa-solid fa-star" aria-hidden="true"></i></span>
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
        <% } %>
        </ul>
      </section>
</div>


<script src="main.js"></script>

</body>
</html>